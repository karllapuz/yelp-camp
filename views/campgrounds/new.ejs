<% include ../partials/header %>

<div class="row">
    <h1 style="text-align: center;">Create a New Campground</h1>
    <div style="width: 30%; margin: 25px auto">
        <form action="/campgrounds" method ="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="campground[name]" placeholder="Campground Name"></input>
            </div>            
            <div class="form-group">
                <label for="image">Image URL</label>
                <input class="form-control" type="text" name="campground[image]" placeholder="Image URL"></input>
            </div>       
            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" type="text" name="campground[description]" placeholder="Description"></input>
            </div>
            <div class="form-group">
                <input class="btn btn-lg btn-primary  btn-block  " type="submit"></input>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>