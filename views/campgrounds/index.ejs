<% include ../partials/header %>

<header class ="jumbotron">
    <div class="container">
        <h1><span class="glyphicon glyphicon-tent" aria-hidden="true"></span> Welcome to YelpCamp</h1> 
        <p>View our hand-picked campgrounds</p>
        <p>
            <a href="/campgrounds/new" class="btn btn-primary btn-lg" >Add a Campground</a>
        </p>
    </div>
</header>

<div class="row text-center home">
    <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src ="
                    <%= campground.image %>">
                </img>
                <div class="caption">
                    <h3>
                        <%= campground.name %>
                    </h3>
                </div>
                <p>
                    <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
    <% }) %>
</div>

<% include ../partials/footer %>